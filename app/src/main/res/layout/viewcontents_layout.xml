<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FFFFC4"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFC4"
        android:weightSum="100">

        <TextView
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/athiti_extralight"
            android:text="Date started"
            android:textColor="#FD8C84"
            android:id="@+id/DStarted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:background="@drawable/textviewborder"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_centerInParent="true"
            android:text="Days lasted"
            android:fontFamily="@font/athiti_extralight"
            android:textColor="#FD8C84"
            android:id="@+id/DLasted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:background="@drawable/textviewborder"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_alignParentRight="true"
            android:text="Date Ended"
            android:fontFamily="@font/athiti_extralight"
            android:textColor="#FD8C84"
            android:id="@+id/DEnded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:background="@drawable/textviewborder"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listviewperiodhistory"
        />
</LinearLayout>